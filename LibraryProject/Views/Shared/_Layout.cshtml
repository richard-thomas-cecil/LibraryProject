                        {
                            <li class="dropdown-divider"></li>
                            <li class="nav-item dropdown dropright">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Content Management
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                                    <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="GenreManagement" asp-action="Index">Genre Management</a>
                                    <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="BookManagement" asp-action="Index">Book Management</a>

                                </div>
                            </li>
                        }
                        @if (User.IsInRole(SD.Role_Admin_Employee) || User.IsInRole(SD.Role_Librarian_Employee) || User.IsInRole(SD.Role_Assistant_Employee))
                        {
