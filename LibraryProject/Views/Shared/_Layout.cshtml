                                <a class="nav-link drowpdown navbar-toggler" href="#" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    User Management
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navBarDropdown">
                                    @if (User.IsInRole(SD.Role_Admin_Employee))
                                    {
                                        <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="EmployeeManagement" asp-action="Index">Employee Users</a>
                                    }
                                    <a class="dropdown-item text-dark" asp-area="Librarian" asp-controller="LibraryMember" asp-action="Index">Library Members</a>

                                </div>
                            </li>
                        }
