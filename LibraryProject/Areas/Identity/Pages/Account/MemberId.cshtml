@page
@model LibraryProject.Areas.Identity.Pages.Account.MemberIdModel
@{ 


}

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>Please Enter Your Member ID</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.MemberId"></label>
                <input asp-for="Input.MemberId" class="form-control" />
                <span asp-validation-for="Input.MemberId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
